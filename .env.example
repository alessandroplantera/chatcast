
# ChatCast Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# Notion Integration
NOTION_TOKEN=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_DISABLED=false

# ============================================
# SECURITY (Required for production)
# ============================================

# Admin API key for protected endpoints (generate with: openssl rand -hex 32)
ADMIN_API_KEY=your_admin_key_here

# Telegram admin user IDs (comma-separated)
ADMIN_TELEGRAM_USERS=123456789,987654321

# Allowed origins for CORS (comma-separated, required in production)
# Example: https://chatcast.example.com,https://www.chatcast.example.com
ALLOWED_ORIGINS=

# ============================================
# DATABASE
# ============================================

DATABASE_PATH=./data/chatcast.db
MESSAGES_DB_PATH=./data/messages.db

# ============================================
# SERVER
# ============================================

NODE_ENV=production
PORT=3000

# Logging
LOG_LEVEL=info
